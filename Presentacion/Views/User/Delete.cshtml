@model Capa_Entidad.Usuario

@{
    ViewBag.Title = "Delete";
}

<h2>¿Seguro que desesas eliminar?</h2>

<h3>Introduce el id del usuario a eliminar</h3>
<div>
    
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group"> 
            <div class="row">
                <div class="col-md-5">
                    @Html.EditorFor(model => model.id, new { htmlAttributes = new { @placeholder = "ID", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <br />
            <div class="row">
                <div class="col-md-3">

                    <input type="submit" value="Delete" class="btn btn-2 btn-2d" /> 
                   
                </div>
                <div class="col-md-3">

                    
                    <a href="/User/Details" class="btn btn-6 btn-6">Tabla</a>

                </div>
            </div>
        </div>
        
    }
</div>
