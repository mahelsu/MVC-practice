@model Capa_Entidad.Usuario

@{
    ViewBag.Title = "Edit";
}

<h2>Usuarios</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Introduzca el id del usuario/empleado que quiere editar.</h4>
 
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*@Html.HiddenFor(model => model.id)*@

    <div class="form-group">

        <div class="col-md-5">
            @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @placeholder="ID" } })
            @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
            <hr />
            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Correo" } })
            @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
            <br />
            @Html.EditorFor(model => model.idDpt, new { htmlAttributes = new { @class = "form-control", @placeholder = "ID de departamento" } })
            @Html.ValidationMessageFor(model => model.idDpt, "", new { @class = "text-danger" })
            <br />
            @Html.EditorFor(model => model.cargo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Cargo" } })
            @Html.ValidationMessageFor(model => model.cargo, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    <input type="submit" value="Save" class="btn btn-8 btn-8d" />

                </div>
                <div class="col-md-6">
                    <a href="/User/Details" class="btn btn-6 btn-6h"> Tabla</a>
                </div>
            </div>
        </div>

    </div>
    


</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
