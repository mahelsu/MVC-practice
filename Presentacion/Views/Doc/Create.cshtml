@model Capa_Entidad.Documento

@{
    ViewBag.Title = "Create";
}

<h2>Crear</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Documentos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">

        
        <img src="~/Content/Alela/images/Doc.svg" width="420" height="370" />

        <div class="col-md-5">
            @Html.EditorFor(model => model.tipo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tipo de documento" } })
            @Html.ValidationMessageFor(model => model.tipo, "", new { @class = "text-danger" })
            <br />
            @Html.EditorFor(model => model.idEmpleado, new { htmlAttributes = new { @class = "form-control", @placeholder = "Id de empleado" } })
            @Html.ValidationMessageFor(model => model.idEmpleado, "", new { @class = "text-danger" })
            <br />
            @Html.EditorFor(model => model.dptOrigen, new { htmlAttributes = new { @class = "form-control", @placeholder = "Departamento de origen" } })
            @Html.ValidationMessageFor(model => model.dptOrigen, "", new { @class = "text-danger" })
            <br />
            @Html.EditorFor(model => model.dptDestino, new { htmlAttributes = new { @class = "form-control", @placeholder = "Departamento de destino" } })
            @Html.ValidationMessageFor(model => model.dptDestino, "", new { @class = "text-danger" })


            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-6 btn-6h" />
                    </div>
                </div>
                <div class="col-md-6">
                    <a href="/Doc/Details" class="btn btn-6 btn-6h"> Tabla</a>
                </div>
            </div>

            <br />
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-md-6">
                    <a href="/Home/FormControl" class="btn btn-2 btn-2c">Volver</a>
                </div>
            </div>

        </div>
    </div>




    </div>
    
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
