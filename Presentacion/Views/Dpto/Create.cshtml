@model Capa_Entidad.Departamento

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Departamento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-sm-5">
            <img src="~/Content/Alela/images/Dpt.svg" width="400" height="350" />
        </div>
       
       
        <div class="col-md-5">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @placeholder = "Nombre", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            <br />
            <br />
            @Html.EditorFor(model => model.siglas, new { htmlAttributes = new { @placeholder = "Siglas", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.siglas, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-sm-6">
                    <input type="submit" value="Create" class="btn btn-6 btn-6h" />
                </div>
                <div class="col-sm-6">
                    <a href="/Dpto/Details" class="btn btn-6 btn-6h"> Tabla</a>
                </div>
            </div>
            <br />
            <br />
    
            <div class="row">
                <div class="col-md-6">
                    <a href="/Home/FormControl" class="btn btn-2 btn-2c">Volver</a>
                </div>
            </div>
        </div>
    </div>
        
 </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
